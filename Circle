package Circle;
public class Circle implements Comparable<Circle> {
    private double radius;
    private String colour;

    public Circle(double radius, String colour) {
        this.radius = radius;
        this.colour = colour;
    }
    public double getRadius() {
        return radius;
    }
    public void setRadius(double radius) {
        this.radius = radius;
    }
    public String getColour() {
        return colour;
    }
    public void setColour(String colour) {
        this.colour = colour;
    }
//overriding the equals method to be able to see whether two objects are identical or not
    public boolean equals(Object obj){
        Circle one = (Circle) obj;
        if(one.radius == this.radius && one.colour.equalsIgnoreCase(this.colour)){
            return true;
        }
        return false;
    }
//overriding the compareTo method from the Comparable interface to be able to compare two objects
    public int compareTo(Circle o){
        if(o.radius > this.radius){
            return -1;
        }
        else if(this.radius == o.radius){
            return 0;
        }
        else
            return 1;
    }
    @Override
    public String toString() {
        return "Circle{" + "radius=" + radius + ", colour=" + colour + '}';
    }
}
